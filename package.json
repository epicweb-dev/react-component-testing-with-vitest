{
  "name": "react-component-testing-with-vitest",
  "private": true,
  "epicshop": {
    "title": "React Component Testing with Vitest",
    "subtitle": "Test React components in the actual browser",
    "githubRepo": "https://github.com/epicweb-dev/react-component-testing-with-vitest",
    "instructor": {
      "name": "Artem Zakharchenko",
      "avatar": "/images/instructor.png",
      "xHandle": "kettanaito"
    }
  },
  "type": "module",
  "scripts": {
    "postinstall": "cd ./epicshop && pkgmgr install",
    "start": "pkgmgrx --prefix ./epicshop epicshop start",
    "dev": "pkgmgrx --prefix ./epicshop epicshop start",
    "test": "pkgmgr run test --silent --prefix playground",
    "test:e2e": "pkgmgr run test:e2e --silent --prefix playground",
    "test:e2e:dev": "pkgmgr run test:e2e:dev --silent --prefix playground",
    "test:e2e:run": "pkgmgr run test:e2e:run --silent --prefix playground",
    "setup": "pkgmgrx epicshop setup",
    "setup:custom": "node ./epicshop/setup-custom.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc -b",
    "validate:all": "npm-run-all --parallel --print-label --print-name --continue-on-error test:all lint typecheck",
    "clean": "rm -rf ./exercises/**/__screenshots__ && rm -f ./exercises/**/*.tsbuildinfo"
  },
  "keywords": [],
  "author": "Artem Zakharchenko <kettanaito@gmail.com> (https://kettanaito.com/)",
  "license": "GPL-3.0-only",
  "workspaces": [
    "exercises/*/*"
  ],
  "engines": {
    "node": "^18.19.0 || >=20.5.0",
    "npm": ">=8.16.0",
    "git": ">=2.18.0"
  },
  "devDependencies": {
    "@epic-web/config": "^1.18.3",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.3",
    "pkgmgr": "^1.1.1"
  },
  "prettier": "@epic-web/config/prettier"
}
